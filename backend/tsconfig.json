{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  // 컴파일 파일 경로
  "include": ["./src/*.ts", "src/config/winston.ts"],
  // 컴파일 제외 파일 경로
  "exclude": ["node_modules"]
}
